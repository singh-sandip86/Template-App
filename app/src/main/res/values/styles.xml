<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProgressBar.Circular" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/purple_6</item>
        <item name="trackCornerRadius">@dimen/dp_8</item>
    </style>

    <style name="TextView.Heading2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/gray_10</item>
    </style>

    <style name="TextView.Heading2.Toolbar" parent="TextView.Heading2">
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/gray_10</item>
        <item name="android:lines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_12sp</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_24sp</item>
        <item name="autoSizeStepGranularity">@dimen/text_size_2sp</item>
    </style>

    <style name="TextView.Heading3" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/gray_10</item>
    </style>

    <style name="List.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="cardCornerRadius">@dimen/dp_16</item>
        <item name="cardElevation">@dimen/dp_2</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="TextView.Caption2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Subtitle2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/gray_10</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Caption2.Light" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/gray_7</item>
    </style>

    <style name="TextView.Caption3" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/gray_7</item>
    </style>

    <style name="TextView.Button2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/purple_6</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>