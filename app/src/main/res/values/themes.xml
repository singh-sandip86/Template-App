<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TemplateApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.TemplateApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/teal_700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.TemplateApp</item>
    </style>

    <style name="Theme.TemplateApp.LightStatusBar" parent="Theme.TemplateApp">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LabelMedium" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_10</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LabelMediumError" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red_6</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextMedium" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_10</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColorHint">@color/gray_7</item>
        <item name="android:textCursorDrawable">@drawable/ed_custom_cursor</item>
        <item name="android:padding">@dimen/dp_12</item>
    </style>

    <style name="EditTextPassword">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_10</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColorHint">@color/gray_7</item>
        <item name="android:textCursorDrawable">@drawable/ed_custom_cursor</item>
        <item name="android:padding">@dimen/dp_12</item>
    </style>

    <style name="PositiveButtonSelector" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/dp_48</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>